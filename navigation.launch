<launch>
	<master auto="start"/>

	<!-- Run the map server -->
	<node pkg="map_server" type="map_server" name="map_server" args="/home/saturn/piberry-launch/map.yaml" />

	<!-- run AMCL-->
	<include file="/home/saturn/piberry-launch/amcl.launch" />

	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<param name="controller_frequency" value="2.0" />
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
		<rosparam file="/home/saturn/piberry-launch/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="/home/saturn/piberry-launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="/home/saturn/piberry-launch/local_costmap_params.yaml" command="load" />
		<rosparam file="/home/saturn/piberry-launch/global_costmap_params.yaml" command="load" />
		<rosparam file="/home/saturn/piberry-launch/dwa_planner_params.yaml" command="load" />
	</node>

</launch>
